<!DOCTYPE html>
<html lang="tr">

<%- include("../inc/head") %>

    <body>
        <div class="register">
            <div class="left">
                <a href="/"><img src="newlogo.png" alt=""></a>
                <div class="login-input-group">
                    <div class="input-row">
                        <label for="kadi">Kullanıcı Adı</label>
                        <input type="text" name="kadi" id="kadi">
                    </div>
                    <div class="input-row">
                        <label for="adSoyad">Ad Soyad</label>
                        <input type="text" name="adSoyad" id="adSoyad">
                    </div>
                    <div class="input-row">
                        <label for="telNo">Telefon Numarası</label>
                        <input type="number" name="telNo" id="telNo">
                    </div>
                    <div class="input-row">
                        <label for="eMail">E-Mail</label>
                        <input type="text" name="eMail" id="eMail">
                    </div>
                    <div class="input-row">
                        <label for="password">Şifre</label>
                        <input type="password" name="password" id="password">
                    </div>
                    <div class="input-row">
                        <label for="againPassword">Şifre Tekrar</label>
                        <input type="password" name="againPassword" id="againPassword">
                    </div>
                    <div class="input-row">
                        <button class="login-btn" id="yonetimKayit">Giriş</button>
                    </div>
                </div>
            </div>
            <div class="right"><img src="loginimg.png" alt=""></div>
        </div>
    </body>
    <script>
        $("#yonetimKayit").click(async function () {
            var siteModel = {
                Kadi: $("#kadi").val(),
                adSoyad: $("#adSoyad").val(),
                telNo: parseInt($("#telNo").val()),
                eMail: $("#eMail").val(),
                password: $("#password").val()
            }
            await yoneticiEkle(siteModel)
        })

        async function yoneticiEkle(x) {
            console.log(x)
            const result = await $.ajax({
                url: '/kayitol',
                type: 'post',
                dataType: "json",
                data: x,
                success: function (response) {
                    console.log("Kayıt Gerçekleşti")

                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                },
                error: function (response) {
                    console.log("Hata")
                }
            })
            return result;
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF"
        crossorigin="anonymous"></script>

</html>